@model AdminIndexData

@{
    ViewData["Title"] = "校区管理";
    ViewData["PageTtile"] = "校区管理";
}

<style>
  a:hover {
    text-decoration: none;
  }
</style>

<div class="mdl-grid" style="width: 100%">
  @foreach (var item in Model.Campuses)
  {
      <div class="mdl-cell mdl-cell--4-col mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title mdl-card--expand">
          <a asp-action="Details" asp-controller="CampusMgr" asp-route-id="@item.Id"
             class="campusEntry mdl-button mdl-button--colored">
            <h2 class="mdl-card__title-text">@item.Name 校区</h2>
          </a>
        </div>

        <div class="mdl-card__supporting-text">
          @item.Address
        </div>

        <div class="mdl-card__actions mdl-card--border">
          <span style="line-height: 36px; position:relative; left:8px; font-size:12px;">
            共 @item.Department.Count() 个学院
          </span>
          <a asp-action="Edit" asp-controller="CampusMgr" asp-route-id="@item.Id"
             class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
             data-toggle="tooltip" data-placement="top" title="编辑"
             style="float: right;">
            <i class="material-icons">edit</i>
          </a>
          <a asp-action="Delete" asp-controller="CampusMgr" asp-route-id="@item.Id"
             class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
             data-toggle="tooltip" data-placement="top" title="删除"
             style="float: right">
            <i class="material-icons">delete</i>
          </a>
        </div>
      </div>
  }
</div>

<a asp-action="Create" id="createCampus"
   class="mdl-button mdl-button--colored mdl-button--fab mdl-js-button mdl-js-ripple-effect"
   style="position:fixed; bottom: 60px; right: 120px;">
  <i class="material-icons">add</i>
</a>
<div class="mdl-tooltip" for="createCampus">新增校区</div>

@Html.Partial("_BSTollTipPartial")
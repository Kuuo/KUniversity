@model Department

@{
    ViewData["Title"] = "新增学院";
    ViewData["PageTtile"] = "新增学院";
}

<style>
  a:hover {
    text-decoration: none;
  }
</style>

<div class="mdl-grid">
  <form asp-action="Create">
    <div class="modal-dialog">
      <div class="modal-content" style="padding: 10px 20px">
        <div class="modal-header">
          <h5 class="modal-title">新增学院</h5>
        </div>

        <div class="modal-body">
          <div class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
              <label asp-for="CampusId" class="col-md-3 control-label"></label>
              <div class="col-md-9">
                <select asp-for="CampusId" class="form-control" asp-items="ViewBag.CampusID"></select>
              </div>
            </div>

            <div class="form-group">
              <label asp-for="InstructorId" class="col-md-3 control-label"></label>
              <div class="col-md-9">
                <select asp-for="InstructorId" class="form-control" asp-items="ViewBag.InstructorID"></select>
              </div>
            </div>

            <div class="form-group">
              <label asp-for="Name" class="col-md-3 control-label"></label>
              <div class="col-md-9">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
              </div>
            </div>

            <div class="form-group">
              <label asp-for="StartTime" class="col-md-3 control-label"></label>
              <div class="col-md-9">
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
              </div>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <a asp-action="Index" class="mdl-button mdl-button--accent"
             style="float: left; position:relative; left: 12px; line-height: 36px;">取消</a>
          <input type="submit" value="新增" class="mdl-button mdl-button--colored" />
        </div>
      </div>
    </div>
  </form>
</div>

@Html.Partial("_ValidationScriptsPartial")
@model Department

@{
    ViewData["Title"] = "确认删除";
    ViewData["PageTtile"] = "确认删除";
}

<style>
  a:hover {
    text-decoration: none;
  }
</style>

<div class="mdl-card mdl-shadow--2dp mdl-grid" style="width: 60%; padding: 10px 20px">
  <h5>确认删除该学院？</h5>
  <hr />
  <input type="hidden" asp-for="Id" />
  <div class="dl-horizontal" style="width: 100%; text-align: center">
    <p style="font-size: 22px">
      @Html.DisplayFor(model => model.Name)
    </p>
    <p>
      建立于 @Html.DisplayFor(model => model.StartTime)
    </p>
  </div>

  <span style="font-size: 14px; margin-left: 20px;">
    包含 @Model.Major.Count() 个专业：
  </span>
  <div class="mdl-grid" style="width: 100%">
    @foreach (var item in Model.Major)
    {
        <div class="mdl-cell mdl-cell--6-col mdl-chip" style="text-align: center;">
          <span class="mdl-chip__text">
            @Html.DisplayFor(modelItem => item.Title)
          </span>
        </div>
    }
  </div>

  <form asp-action="Delete" class="mdl-grid" style="display: block; width: 100%;">
    <div class="form-actions no-color">
      <button type="submit" style="float: right;" id="deleteConfirm"
              class="mdl-button mdl-button--accent mdl-button--fab mdl-js-button mdl-js-ripple-effect">
        <i class="material-icons">delete</i>
      </button>
      <a asp-action="Details" asp-route-id="@Model.Id" asp-controller="DepartmentMgr"
              class="mdl-button mdl-button--primary">
        取消
      </a>
    </div>
  </form>
</div>

<div class="mdl-tooltip" for="deleteConfirm">确认删除</div>
@model Department

@{
    ViewData["Title"] = Model.Name;
    ViewData["PageTtile"] = Model.Name;
}

<style>
  #back {
    position: absolute;
    left: 3%;
  }

  #deletec {
    position: absolute;
    right: 3%;
  }

  a:hover {
    text-decoration: none;
  }
</style>

<a asp-action="Index" id="back"
   style="float: right;"
   class="mdl-button mdl-button--primary mdl-button--fab mdl-js-button mdl-js-ripple-effect">
  <i class="material-icons">arrow_back</i>
</a>

<div class="mdl-card mdl-shadow--2dp mdl-grid" style="width: 60%; padding: 10px 20px">
  <div style="width: 100%; padding-top: 20px">
    <span style="font-size: 20px; margin-bottom: 10px;">
      @Model.Name
    </span>
    <span style="font-size: 14px; float: right; margin-right: 20px">
      管理员 @Model.Instructor.Name
    </span>
    <br /> <br />
    <span style="font-size: 14px;">
      建立于 @Model.StartTime.ToString("yyyy-MM")
    </span>
  </div>

  <div style="width: 100%; height: 36px;">
    <hr />
    <div style="float: right; padding: 10px; margin-top: -56px">
      <a asp-action="Edit" asp-controller="DepartmentMgr" asp-route-id="@Model.Id" id="editc"
         class="mdl-button mdl-button--primary mdl-button--fab mdl-js-button mdl-js-ripple-effect">
        <i class="material-icons">edit</i>
      </a>
    </div>
  </div>
</div>

<a asp-action="Delete" asp-controller="DepartmentMgr" asp-route-id="@Model.Id" id="deletec"
   class="mdl-button mdl-button--accent mdl-button--fab mdl-js-button mdl-js-ripple-effect">
  <i class="material-icons">delete</i>
</a>

<div class="mdl-tooltip" for="back">返回</div>
<div class="mdl-tooltip" for="editc">编辑</div>
<div class="mdl-tooltip" for="deletec">删除</div>

<div class="mdl-grid" style="width: 100%; margin-bottom: 40px; margin: 0 auto">

  <p style="font-size: 16px; margin-bottom: -5px; margin-top: 15px;">包含 @Model.Major.Count() 个专业</p>
  <hr />

  <div class="mdl-grid" style="width: 100%">
    @foreach (var item in Model.Major)
    {
        <div class="mdl-cell mdl-cell--4-col mdl-chip" style="text-align: center;">
          <span class="mdl-chip__text">
            @Html.DisplayFor(modelItem => item.Title)
          </span>
        </div>
    }
  </div>
</div>
@model AdminLoginViewModel

@{
    Layout = "LayoutHome";

    ViewData["Title"] = "登录";
}

<link href="~/css/Home/loginStyle.css" rel="stylesheet" />

<div class="kbgi" id="bgi"></div>

<div class="row" id="loginRow">
  <div class="col-md-4"></div>

  <div class="col-md-4" id="loginFormDiv">
    <form asp-action="TryAdminLogin" asp-controller="Home" class="mdl-card mdl-shadow--4dp" id="loginForm">
      <p id="loginTitle">系统管理员登录</p>
      
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <label class="mdl-textfield__label" for="loginPassword">密码</label>
        <input asp-for="Password" class="mdl-textfield__input"
               type="password" id="loginPassword" maxlength="20">
      </div>
      <span asp-validation-for="Password" class="text-danger"></span>

      <div class="row" id="loginSubmitButtonRow">
        <button type="submit" id="loginSubmit"
                class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored">
          登录
        </button>
      </div>      
      
      <div class="row">
        <a asp-action="Index" id="loginForgetPwd">返回以普通用户登录</a>
      </div>
    </form>
  </div>

  <div class="col-md-4"></div>
</div>


<script src="~/js/Home/center.js"></script>

@Html.Partial("_ValidationScriptsPartial")